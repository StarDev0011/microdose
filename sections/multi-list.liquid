<h1>{{section.settings.title}}</h1>
<div class = "multilists">
  {%- for block in section.blocks -%}
    <div class="list_item">
      <div class="list_img">
        {%- if block.settings.image != blank -%}
        {%- capture sizes -%}(min-width: 990px) {% if section.blocks.size <= 2 %}710px{% else %}550px{% endif %}, (min-width: 750px) {% if section.blocks.size == 1 %}710px{% else %}550px{% endif %}, calc(100vw - 30px){%- endcapture -%}
          {{ block.settings.image | image_url: width: 1420 | image_tag:
            loading: 'lazy',
            sizes: sizes,
            widths: '275, 550, 710, 1420',
            class: 'multicolumn-card__image'
          }}
        {% endif %}
      </div>
      <div class="list_text">
        {{ block.settings.text }}
      </div>
    </div>
  {%- endfor -%}
  {%- if section.settings.button_label != blank -%}
    <div class="btn_container">
      <a href="{{ section.settings.button_link }}" class="second_btn">{{ section.settings.button_label | escape }}</a>
    </div>
  {%- endif -%}
</div>
{% schema %}
  {
    "name": "Multi Lists",
    "class": "multi-list",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Multicolumn",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "button_label",
        "default": "Button label",
        "label": "Label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Link"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "list",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "richtext",
            "id": "text",
            "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
            "label": "Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Multi List",
        "blocks": [
          {
            "type": "column"
          },
          {
            "type": "column"
          },
          {
            "type": "column"
          }
        ]
      }
    ]
  }
{% endschema %}

